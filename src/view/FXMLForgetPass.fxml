<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLForgetPassController">
   <children>
      <VBox alignment="CENTER" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER_LEFT" fillWidth="false" maxWidth="400.0" prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre de usuario">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="TFUsername" prefWidth="400.0" />
               </children>
            </VBox>
            <Button fx:id="BSendPass" mnemonicParsing="false" onAction="#recoverPassword" prefWidth="400.0" styleClass="big" text="Enviar correo">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
            </Button>
            <Text fx:id="TError" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Usuario no existe" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Text>
         </children>
      </VBox>
   </children>
</AnchorPane>
