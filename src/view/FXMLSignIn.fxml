<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLSignInController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox alignment="CENTER_LEFT" fillWidth="false" maxWidth="400.0" prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Usuario">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="TFUser" prefWidth="400.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" fillWidth="false" maxWidth="400.0" prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <PasswordField fx:id="PFPass" prefWidth="400.0" />
                  <Hyperlink fx:id="HLForgetPass" onAction="#navigateToForgotPass" text="¿Olvidaste tu contraseña?">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Hyperlink>
               </children>
            </VBox>
            <Button fx:id="BSignIn" alignment="CENTER" mnemonicParsing="false" onAction="#authorizeUser" prefWidth="400.0" text="Iniciar sesión" textAlignment="CENTER">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Text fx:id="TError" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Has introducido datos incorrectos" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Text>
         </children>
         <padding>
            <Insets left="150.0" right="150.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
